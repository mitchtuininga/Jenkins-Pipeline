pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'Building the code using Maven.'
                script {
                    logFunction('Build completed') // Custom log function
                }
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo 'Running unit and integration tests using JUnit and Mockito.'
                script {
                    logFunction('Tests executed') // Log function for tests
                }
            }
            post {
                always {
                    emailext (
                        subject: "Unit and Integration Tests Status Email",
                        body: "The build result is: ${currentBuild.currentResult} \nLogs and details can be found at: ...",
                        to: "mitch.tuininga@gmail.com",
                        attachmentsPattern: '**/target/*.log'
                    )
                }
            }
        }
        stage('Code Analysis') {
            steps {
                echo 'Analysing the code using SonarQube.'
                script {
                    logFunction('Code analysis completed') // Log function for code analysis
                }
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Performing a security scan using OWASP Dependency-Check.'
                script {
                    logFunction('Security scan completed') // Log function for security scan
                }
            }
            post {
                always {
                    emailext (
                        subject: "Security Scan Status Email",
                        body: "The build was a: ${currentBuild.currentResult} \nLogs: ...",
                        to: "mitch.tuininga@gmail.com",
                        attachmentsPattern: '**/security-scan/*.report'
                    )
                }
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying the application to a staging server on AWS EC2.'
                script {
                    logFunction('Deployment to staging') // Log function for deployment
                }
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running integration tests on the staging environment using Postman.'
                script {
                    logFunction('Integration tests on staging completed') // Log function for integration tests
                }
            }
        }
        stage('Deploy to Production') {
            steps {
                echo 'Deploying the application to a production server on AWS EC2.'
                script {
                    logFunction('Deployment to production') // Log function for production deployment
                }
            }
        }
    }
}

def logFunction(message) {
    echo "[LOG]: ${message}"
}